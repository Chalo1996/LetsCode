<%- include("../includes/head.ejs") %>
 <link rel="stylesheet" href="/styles/shop.css" />
    <title><%= pageTitle %></title>
  </head>
  
  <body class="body">
    <header class="header">
      <%- include("../includes/navigation.ejs") %>
    </header>
    <main class="main">
      <%if (products.length > 0) {%>
        <div>
          <header class="card__header">
            <h1 class="product__title" style="text-align: center;">Total Price: $<%= totalPrice %></h1>
          </header>
        </div>
      <div class="grid">
        <% for (let product of products) { %>
        <article class="card product-item">
          <header class="card__header">
            <h1 class="product__title"><%= product.title %></h1>
          </header>
          <div class="card__image">
            <img src="<%= product.ImgUrl %>" alt="<%= product.title %>" />
          </div>
          <div class="card__content">
            <h2 class="product__price">$<%= product.price %></h2>
            <p class="product__description">
             Quantity: <%= product.qty %>
            </p>
            <div class="card__actions">
              <!-- <a href="/admin/edit-product/<%= product.id %>?edit=true" class="btn">Edit</a> -->
              <form action="/cart-delete-item/<%= product.id %>" method="post">
                <input type="hidden" value="<%= product.id %>" name="productId">
                <button type="submit" class="btn">Delete</button>
              </form>
            </div>
          </div>
        </article>
        <%}%>
      </div>
      <%} else { %>
      <h1 class="product__title">No products found in the cart.</h1>
      <div style="display: flex; justify-content: center; align-items: center; height: 100vh;">
        <a href="/products" class="btn">Add product</a>
      </div>
      <%} %>
    </main>
    <%- include("../includes/end.ejs") %>